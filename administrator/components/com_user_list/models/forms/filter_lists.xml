<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" hint="COM_USER_LIST_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_USER_LIST_FILTER_STATE"
               description="COM_USER_LIST_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        

    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_CONTENT_LIST_FULL_ORDERING"
               description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.`id` ASC">ID Ascending</option><option value="a.`id` DESC">ID Descending</option><option value="a.`avatar` ASC">Avatar Ascending</option><option value="a.`avatar` DESC">Avatar Descending</option><option value="a.`username` ASC">Avatar Ascending</option><option value="a.`username` DESC">Avatar Descending</option><option value="a.`year_of_birth` ASC">Avatar Ascending</option><option value="a.`year_of_birth` DESC">Avatar Descending</option><option value="a.`gender` ASC">Avatar Ascending</option><option value="a.`gender` DESC">Avatar Descending</option><option value="a.`view_health_info` ASC">Avatar Ascending</option><option value="a.`view_health_info` DESC">Avatar Descending</option>

        </field>

        <field name="limit"
               type="limitbox"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>